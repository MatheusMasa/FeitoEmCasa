@model PizzariaMVCAtivdade.Models.ViewModels.PostPizzaDTO

@{
    ViewData["Title"] = "Cadastrar Pizzas";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Adicionar Pizza</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FotoURL" class="control-label"></label>
                                <input asp-for="FotoURL" type="text" class="form-control" />
                                <span asp-validation-for="FotoURL" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Tamanho" class="control-label"></label>
                                <select asp-for="Tamanho" class="form-control" asp-items="ViewBag.Tamanhos"></select>
                                <span asp-validation-for="Tamanho" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sabores" class="control-label"></label>
                                <select asp-for="Sabores" class="form-control" asp-items="ViewBag.Sabores" multiple></select>
                                <span asp-validation-for="Sabores" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary ml-2" asp-action="Index">Listar Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

}